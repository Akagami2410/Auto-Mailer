# Database
DB_HOST=your-db-host.com
DB_NAME=your_database
DB_USER=your_user
DB_PASSWORD=your_password
DB_PORT=3306

# Shopify
SHOPIFY_API_KEY=your_shopify_api_key
SHOPIFY_API_SECRET=your_shopify_api_secret
SHOPIFY_API_VERSION=2026-01
SHOPIFY_ADMIN_WEBHOOK_SECRET=your_webhook_secret_from_shopify_admin
SHOPIFY_SCOPES=read_orders,write_orders,read_fulfillments,write_fulfillments

# App
PORT=3000
NODE_ENV=development
APP_URL=https://your-ngrok-url.ngrok-free.app

# Worker Configuration
ENABLE_WORKER=true
WORKER_CONCURRENCY=8
WORKER_POLL_MS=750
WORKER_MAX_ATTEMPTS=12

# Cron Token (for scheduled jobs)
CRON_TOKEN=your_secret_cron_token

# SMTP Email
SMTP_HOST=your-smtp-host.com
SMTP_PORT=465
SMTP_USER=your-email@example.com
SMTP_PASS=your_smtp_password
SMTP_SECURE=true
MAIL_FROM="Your Name <your-email@example.com>"

# AddEvent (optional)
ADDEVENT_API_KEY=your_addevent_api_key
ADDEVENT_NORTHERN_CALENDAR_ID=cal_xxx
ADDEVENT_SOUTHERN_CALENDAR_ID=cal_xxx
ADDEVENT_SNAPSHOT_TTL_MINUTES=15

# Subscription Remover - Variant IDs for calendar mapping
NORTHERN_VARIANT_IDS=123456789,987654321
SOUTHERN_VARIANT_IDS=111111111,222222222

# Shopify Flow Integration
FLOW_SHARED_SECRET=your_flow_shared_secret
